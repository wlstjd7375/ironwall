<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivPolice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:src="@drawable/icon_police"/>
        <ImageView
            android:id="@+id/ivDanger"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:src="@drawable/icon_danger"/>
        <ImageView
            android:id="@+id/ivMyLocation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:src="@drawable/icon_my_loc"/>
    </LinearLayout>

    <fragment
        android:name="com.ironwall.android.smartspray.api.nmap.NMapFragment"
        android:id="@+id/nmap_fragment"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dip"  />

</LinearLayout>
